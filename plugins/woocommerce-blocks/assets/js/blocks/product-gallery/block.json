{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "woocommerce/product-gallery",
	"version": "1.0.0",
	"title": "Product Gallery",
	"description": "Showcase your products relevant images and media.",
	"category": "woocommerce",
	"keywords": [ "WooCommerce" ],
	"supports": {
		"align": true,
		"multiple": false
	},
	"textdomain": "woo-gutenberg-products-block",
	"providesContext": {
		"thumbnailsPosition": "thumbnailsPosition",
		"thumbnailsNumberOfThumbnails": "thumbnailsNumberOfThumbnails",
		"productGalleryClientId": "productGalleryClientId",
		"pagerDisplayMode": "pagerDisplayMode"
	},
	"attributes": {
		"thumbnailsPosition": {
			"type": "string",
			"default": "left"
		},
		"thumbnailsNumberOfThumbnails": {
			"type": "number",
			"default": 3
		},
		"pagerDisplayMode": {
			"type": "string",
			"default": "dots"
		},
		"productGalleryClientId": {
			"type": "string",
			"default": ""
		},
		"cropImages": {
			"type": "boolean",
			"default": false
		},
		"hoverZoom": {
			"type": "boolean",
			"default": false
		},
		"fullScreenOnClick": {
			"type": "boolean",
			"default": false
		}
	}
}
